{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES5",
    "module": "ES2015",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-use-before-define": ["warn", "nofunc"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
